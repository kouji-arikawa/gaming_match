<div class="container">
  <div class="row">
    <div class="col-3">
      <h5 class="my-4 text-center" style="background-color: #f0f0f0;">編集画面</h5>
    </div>
  </div>
    <%= form_with model: @contribution, url: contribution_path do |f| %>
  <div class="col-9">
    <table class="table">
      <thead>
        <tr>
          <th scope="col" style="width: 30%">募集ジャンル</th>
          <th scope="col" style="width: 70%"><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></th>
        </tr>
        <tr>
          <th scope="col" style="width: 30%">募集人数</th>
          <th scope="col" style="width: 70%"><%= f.select :recruitment_numbers, *[1...10] %></th>
        </tr>
        <tr>
          <th scope="col" style="width: 30%">募集内容</th>
          <th scope="col" style="width: 70%"><%= f.text_area :content, :size=>"30x10" %></th>
        </tr>
      </thead>
    </table>
  </div>
    <div class="col-3"></div>
    <div class="col-3">
      <%= f.submit "編集内容を保存", class: "btn btn-success btn-block" %>
    </div>
    <div class="col-1"></div>
    <div class="col-2"><%= link_to "退会する", unsubscribe_path, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></div>
</div>
<% end %>