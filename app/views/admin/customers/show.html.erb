<div class="container">
  <div class="row">
    <div class="col-3">
      <h5 class="my-4 text-center" style="background-color: #f0f0f0;"><%= @customer.first_name %>　<%= @customer.last_name %>の登録情報</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <p class="my_page">登録情報　　<%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success" %></p>
    </div>
  </div>
  <div class="col-9">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col" style="width: 30%">氏名</th>
        <th scope="col" style="width: 70%"><%= @customer.first_name %>　<%= @customer.last_name %></th>
      </tr>
      <tr>
        <th scope="col" style="width: 30%">カナ</th>
        <th scope="col" style="width: 70%"><%= @customer.first_name_kana %>　<%= @customer.last_name_kana %></th>
      </tr>
      <tr>
        <th scope="col" style="width: 30%">ニックネーム</th>
        <th scope="col" style="width: 70%"><%= @customer.nickname %></th>
      </tr>
      <tr>
        <th scope="col" style="width: 30%">Discode ID</th>
        <th scope="col" style="width: 70%"><%= @customer.discode %></th>
      </tr>
      <tr>
        <th scope="col" style="width: 30%">メールアドレス</th>
        <th scope="col" style="width: 70%"><%= @customer.email %></th>
      </tr>
    </thead>
  </table>
  </div>